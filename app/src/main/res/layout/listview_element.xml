<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvbaseRel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_row">
    <RelativeLayout
        android:id="@+id/justtLAyout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg_3">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="Sayok Majumder"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:fontFamily="@font/roboto_thin"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="sdmsdm1998@gmail.com"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/vehid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:fontFamily="@font/roboto_thin"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="WB-16G-0643"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/delBtN"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="76dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_delete_24px" />
        <RelativeLayout
            android:id="@+id/statRelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp">
            <TextView
                android:id="@+id/statusjustText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_thin"
                android:text="Status"
                android:textColor="@android:color/darker_gray"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/statusIV"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/statusjustText"
                android:layout_centerHorizontal="true"
                android:src="@drawable/circle_red" />
            <TextView
                android:id="@+id/statusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusIV"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/offline"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/jstview"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/justtLAyout"
        android:background="#d9d9d9" />
</RelativeLayout>