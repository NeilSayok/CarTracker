<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.neil.carlocator4l.Fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/activity_splash">
        <action
            android:id="@+id/action_splashFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
        <action
            android:id="@+id/action_splashFragment_to_trackFragment"
            app:destination="@id/trackFragment" />
        <action
            android:id="@+id/action_splashFragment_to_OTPFragment"
            app:destination="@id/OTPFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.example.neil.carlocator4l.Fragments.LoginFragment"
        android:label="SigninFragment"
        tools:layout="@layout/activity_signin">
        <action
            android:id="@+id/action_signinFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_signinFragment_to_OTPFragment"
            app:destination="@id/OTPFragment" />
        <action
            android:id="@+id/action_signinFragment_to_trackFragment"
            app:destination="@id/trackFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.neil.carlocator4l.Fragments.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/sign_up">
        <action
            android:id="@+id/action_signupFragment_to_OTPFragment"
            app:destination="@id/OTPFragment" />
        <action
            android:id="@+id/action_signupFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
    </fragment>
    <fragment
        android:id="@+id/trackFragment"
        android:name="com.example.neil.carlocator4l.Fragments.TrackFragment"
        android:label="TrackFragment"
        tools:layout="@layout/activity_tracking"/>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.example.neil.carlocator4l.Fragments.OTPFragment"
        android:label="OTPFragment"
        tools:layout="@layout/otp_activity">
        <action
            android:id="@+id/action_OTPFragment_to_trackFragment"
            app:destination="@id/trackFragment" />
    </fragment>
</navigation>