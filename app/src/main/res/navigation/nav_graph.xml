<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.neil.carlocator4l.Fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/activity_splash">
        <action
            android:id="@+id/action_splashFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.example.neil.carlocator4l.Fragments.SigninFragment"
        android:label="SigninFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.neil.carlocator4l.Fragments.SignupFragment"
        android:label="SignupFragment" />
</navigation>