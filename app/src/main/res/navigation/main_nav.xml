<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.neil.carlocatoruserside1m.Fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/activity_splash">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.example.neil.carlocatoruserside1m.Fragments.AddUserFragment"
        android:label="AddUserFragment"
        tools:layout="@layout/activity_adduser"/>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.neil.carlocatoruserside1m.Fragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/activity_main">
        <action
            android:id="@+id/action_mainFragment_to_addUserFragment"
            app:destination="@id/addUserFragment" />
        <action
            android:id="@+id/action_mainFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.neil.carlocatoruserside1m.Fragments.MapsFragment"
        android:label="MapsFragment"
        tools:layout="@layout/activity_maps"/>
</navigation>